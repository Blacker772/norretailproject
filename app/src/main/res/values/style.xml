<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CircleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    <style name="RectangleWithRoundedCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Закругление углов -->
    </style>
    <style name="MyHintTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item> <!-- Размер текста для Hint -->
        <item name="android:textColor">@color/black</item> <!-- Цвет текста для Hint -->
    </style>





    <!-- Стиль для TextInputLayout -->
    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
<!--        <item name="android:background">@color/white</item>-->
        <item name="boxStrokeColor">@color/blue</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="hintTextAppearance">@style/MyHintTextStyle</item>
    </style>

    <!-- Стиль для TextInputEditText -->
    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
</resources>